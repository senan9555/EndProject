@{
    ViewBag.Title = "EMailSender";
    
}
 @model Employee

 
<div class="container col-lg-12" >
    
        @if (ViewBag.Kontrol != null)
        {
            <h3 class="text-warning">@ViewBag.Kontrol</h3>
        }
 
 
    <div class="col-lg-5" ng-app="">
        @using (Html.BeginForm("EMailSender", "Mail", FormMethod.Post, new { @name = "myForm" }))
        {
            
            <div class="form-group">

               
                <input asp-for="Email" class="form-control" name="sendMailAdress" placeholder="Mail Adresi"  />
 
            </div>

            <div class="form-group">
 
                <input type="text" class="form-control" name="subject" placeholder="Mövzu" id="sifre" />
 
            </div>
            <div class="form-group">
 
                <textarea name="body" class="form-control" placeholder="Məzmun"></textarea>
 
            </div>
 
            <div class="form-group">
 
                <input type="submit" class="form-control btn-primary" value="Göndər" />
 
            </div>
 
        }
    </div>
 
</div>
