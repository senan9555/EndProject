@model List<Employee>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h4 class="card-title">Personal</h4>
                    <div class="d-flex justify-content-end">
                        <a type="button" asp-controller="Employees"  asp-action="SendAll" class="btn btnprimary btn-rounded btn-icon">
                            <i class="mdi mdi-email"></i>
                        </a>
                        <a type="button" asp-action="Create" class="btn btnprimary btn-rounded btn-icon">
                            <i class="mdi mdi-account-plus"></i>
                        </a>
                    </div>


                </div>
                <div class="table-responsive pt-3">
                    <table id="myServices" class="table table-bordered">
                        <thead>
                            <tr>

                                <th>
                                    Ad Soyad
                                </th>
                             
                                <th>
                                    Vəzifə
                                </th>
                                <th>
                                    Maaş
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Əlaqə
                                </th>

                                <th class="text-center">
                                    Əməliyyatlar
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Employee item in Model)
                            {
                                <tr>

                                    <td>
                                        @item.FullName
                                    </td>
                                    <td>
                                        @item.Position.Name
                                    </td>
                                    <td>
                                        @item.Wage
                                    </td>
                                   
                                    <td>
                                        @item.Email
                                    </td>
                                    <td>
                                        @item.PhoneNumber
                                    </td>


                                    <td>
                                        <div class="d-flex justify-content-end">
                                            <a type="button" asp-controller="Mail" asp-action="EMailSender" asp-route-id="@item.Id" class="btn btnprimary btn-rounded btn-icon">
                                                <i class="mdi mdi-email"></i>
                                            </a>
                                            <a type="button" asp-action="Update" asp-route-id="@item.Id" class="btn btnprimary btn-rounded btn-icon">
                                                <i class="mdi mdi-account-convert"></i>
                                            </a>
                                            <a type="button" asp-action="Delete" asp-route-id="@item.Id" class="btn btnprimary btn-rounded btn-icon">
                                                <i class="mdi mdi-account-minus"></i>
                                            </a>
@*
                                            <a asp-action="Update" asp-route-id="@item.Id" style="width:120px" class="btn ou btn-outline-info  mx-2 btn-rounded">Dəyişmək</a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" style="width:120px" class="btn btn-outline-danger  mx-2 btn-rounded">Silmək</a>*@
                                          

                                        </div>
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @* <script>
        $(document).ready(function () {
            $('#myServices').DataTable();
        });</script>*@

    <script>
        $(document).ready(function () {
            $('#myServices').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        });</script>
}

