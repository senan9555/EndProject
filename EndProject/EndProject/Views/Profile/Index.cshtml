@model ProfileVM
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Şəkil
                                </th>
                                 <th>
                                    İstifadəçi Adı
                                </th>
                                <th>
                                    Ad Soyad
                                </th>
                                <th>
                                    Email
                                </th>

                            </tr>
                        </thead>
                        <tbody>


                            <tr>
                                <td>
                                    <img src="~/images/faces/user.png">
                                </td>
                                <td>
                                    @Model.UserName
                                </td>

                                <td>
                                    @Model.FullName
                                </td>
                                <td>
                                    @Model.Email
                                </td>

                            </tr>



                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

