@model List<Expense>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h4 class="card-title">XƏRCLƏR</h4>
                    <a type="button" asp-action="Create" class="btn btnprimary btn-rounded btn-icon">
                        <i class="mdi mdi-currency-usd"></i>
                    </a>
                </div>
                <div class="table-responsive pt-3">
                    <table id="myServices" class="table table-bordered">
                        <thead>
                            <tr>

                                <th>
                                    Xərc
                                </th>
                                <th>
                                    Xərc Haqqında
                                </th>
                                <th>
                                    Xərcin Vaxtı
                                </th>
                                <th>
                                    Qeyd Edən Şəxs
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Expense item in Model)
                            {
                                <tr>

                                    <td>
                                        @item.Money
                                    </td>
                                    <td>
                                        @item.For
                                    </td>
                                    <td>
                                        @item.StartTime.ToString()
                                    </td>
                                    <td>
                                        @item.AppUser?.FullName
                                    </td>


                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

