@model List<Position>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <div class="d-flex justify-content-end">

                    <a type="button" asp-action="Create" class="btn btnprimary btn-rounded btn-icon">
                        <i class="mdi mdi-bookmark-plus"></i>
                    </a>
                </div>

                <div class="table-responsive pt-3">
                    <table id="myServices" class="table table-bordered">
                        <thead>
                            <tr>

                                <th>
                                    Vəzifənin Adı
                                </th>
                                <th>
                                    Status
                                </th>

                                <th class="text-right">
                                    Əməliyyatlar
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Position item in Model)
                            {
                                <tr>

                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @if (item.IsDeactive)
                                        {
                                            <span class="text-danger">Passiv</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">Aktiv</span>

                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-end">
                                            <a type="button" asp-action="Update" asp-route-id="@item.Id" asp-route-id="@item.Id" class="btn btnprimary btn-rounded btn-icon">
                                                <i class="mdi mdi-account-convert"></i>
                                            </a>
                                            @if (item.IsDeactive)
                                            {
                                                <a asp-action="Activity" asp-route-id="@item.Id" style="width:120px" class="btn btn-outline-success  mx-2 btn-rounded">Aktiv Et</a>
                                            }
                                            else
                                            {
                                                <a asp-action="Activity" asp-route-id="@item.Id" style="width:120px" class="btn btn-outline-danger mx-2 btn-rounded">Deaktiv Et</a>

                                            }



                                        </div>
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @* <script>
        $(document).ready(function () {
            $('#myServices').DataTable();
        });</script>*@

    <script>
        $(document).ready(function () {
            $('#myServices').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        });</script>
}

